<div id="<%= local_assigns[:id] %>" class="w-full max-w-md h-128 rounded-xl border border-white/20 shadow-lg overflow-hidden mr-4 mb-4 bg-clip-padding flex flex-col justify-between" style="<%= local_assigns[:style] %>">
  <% if local_assigns[:title] %>
    <div class="px-4 pt-3 border-b border-white/10 text-center flex-shrink-0">
      <h3 class="text-2xl font-semibold text-gray-900"><%= title %></h3>
      <hr class="mt-4 border-gray-300">
    </div>
  <% end %>
  <div class="px-4 py-4 flex-1 overflow-hidden flex flex-col">
    <%= yield %>
  </div>
</div>