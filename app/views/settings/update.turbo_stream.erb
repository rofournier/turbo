<% if @widget_key == 'radio' %>
  <% if @property_to_update == "visible" && @new_value == false %>
    <%= turbo_stream.remove "radio-widget" %>
  <% elsif @property_to_update == "visible" && @new_value == true %>
    <%= turbo_stream.append "dashboard" do %>
      <%= render partial: "radio/component/radio_card", locals: { widget: @widget } %>
    <% end %>
  <% end %>

  <% if @property_to_update == "color" %>
    <%= turbo_stream.replace "radio-widget" do %>
      <%= render partial: "radio/component/radio_card", locals: { widget: @widget } %>
    <% end %>
  <% end %>
<% end %>

