<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4 max-w-5xl">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-indigo-700">Overall Summary</h1>
      <div class="inline-flex rounded-md shadow-sm">
        <%= link_to "All Time", tasks_path, class: "px-4 py-2 text-sm font-medium text-white bg-indigo-700 rounded-l-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300", data: { turbo_stream: true } %>
        <%= link_to "By Week", week_view_tasks_path, class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-r-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300", data: { turbo_stream: true } %>
      </div>
    </div>
    
    <div id="stats-container">
      <%= render "tasks/item/stats", tasks: @all_tasks %>
    </div>
    
    <div id="summary-container">
      <%= render "tasks/item/summary", completed_tasks: @completed_tasks, running_tasks: @running_tasks %>
    </div>

    <div id="charts-container">
      <%= render "tasks/item/charts" %>
    </div>
  </div>
</div>
