<%= form_with model: Message.new, id: "message_form", data: { turbo: true, chat_target: "form" } do |form| %>
  <div class="flex items-center">
    <%= form.text_field :body, placeholder: "Type your message...", class: "flex-grow px-4 py-2 rounded-l-lg border border-gray-300 focus:border-transparent" %>
    <%= form.submit "Send", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-r-lg transition duration-200" %>
  </div>
<% end %>