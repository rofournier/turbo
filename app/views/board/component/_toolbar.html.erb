<div class="toolbar flex justify-center items-center p-2 rounded-md space-x-4">
  <div class="flex space-x-3">
    <button class="tool-btn bg-teal-50 hover:bg-teal-100 p-2 rounded-md shadow-sm transition-all" data-action="board#selectPen" title="Pen">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
      </svg>
    </button>

    <button class="tool-btn bg-teal-50 hover:bg-teal-100 p-2 rounded-md shadow-sm transition-all" data-action="board#erase" title="Clear">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 18v-6a2 2 0 012-2h14a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2zM3 10V8a2 2 0 012-2h14a2 2 0 012 2v2" />
      </svg>
    </button>
    
    <button class="tool-btn bg-teal-50 hover:bg-teal-100 p-2 rounded-md shadow-sm transition-all" data-action="board#clear" title="Erase">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
  </div>
  
  <div class="flex items-center space-x-4">
    <div class="flex items-center">
      <input id="color-picker" type="color" class="h-8 w-10 rounded cursor-pointer border border-gray-300" data-board-target="colorPicker" data-action="change->board#setColor">
    </div>
    <div class="flex items-center">
      <input id="pen-width" type="range" min="1" max="10" value="5" class="h-8 w-20 cursor-pointer" data-board-target="penWidth" data-action="input->board#setPenWidth">
    </div>
  </div>
</div>
