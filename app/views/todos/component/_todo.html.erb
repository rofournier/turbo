<div id="<%= dom_id(todo) %>" class="<%= todo.done ? 'bg-green-50/60' : 'bg-white/50' %> backdrop-filter backdrop-blur-sm border border-white/40 rounded-lg p-3 mb-2 flex items-center justify-between transition-all duration-200">
  <span class="<%= todo.done ? 'line-through text-gray-500' : 'text-gray-800' %> flex-grow">
    <%= todo.name %>
  </span>
  
  <div class="flex space-x-2">
    <%= button_to strike_todo_path(todo), 
      method: :patch, 
      form: { data: { turbo_stream: true } },
      class: "p-1.5 rounded-full hover:bg-gray-100 transition-colors duration-200" do %>
      <% if todo.done %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
        </svg>
      <% end %>
    <% end %>

    <%= button_to todo_path(todo), 
                  method: :delete, 
                  form: { data: { turbo_stream: true } },
                  class: "p-1.5 rounded-full hover:bg-gray-100 transition-colors duration-200" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>