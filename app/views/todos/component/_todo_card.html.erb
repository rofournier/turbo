<%= render layout: "shared/card", locals: { title: "Todo List" } do %>
  <div class="flex flex-col h-full">
    <%= turbo_stream_from "todos" %>
    
    <div class="flex-1 overflow-auto mb-2">
      <%= render 'todos/component/todo_list'%>
    </div>
    
    <div class="flex-shrink-0">
      <%= render partial: "todos/component/todo_form", locals: { todo: todo } %>
    </div>
  </div>
<% end %>
